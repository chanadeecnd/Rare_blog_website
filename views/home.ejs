<%-include('./partials/homeHeader')%>

    <div class="head-title container-fluid d-flex align-items-center" ">
        <div class="p-5 w-50">
            <h1 class="title">Knowledge is <span class="text-warning">the light</span> that guides us in <span class="text-dark">the dark</span> world of ignorance.</h1>
        </div>
        <div class="head-img">
            <img src="/image/knowledge.png" alt="">
        </div>
    </div>
    <div class="container p-5 d-flex-column">
        <div class="container blog d-flex-column">
            <%if(locals.data){%>
                <%data.forEach(data=>{%>
                    <div class="d-flex justify-content-center mt-4">
                        <div class="d-flex-column">
                            <div class="blog-header d-flex align-items-center">
                                <%if(data.userId.image){%>
                                    <%if((data.userId.image).length > 50){%>
                                        <a href="#" style="cursor: default;"><img src="<%=data.userId.image%>" class="rounded-pill" width="40px" height="40px" alt="chanadee"></a>
                                    <%}else{%>
                                        <a href="#" style="cursor: default;"><img src="/uploads/<%=data.userId.image%>" class="rounded-pill" width="40px" height="40px" alt="chanadee"></a>
                                    <%}%>
                                    
                                <%}else{%>
                                    <a href="#" style="cursor: default;"><img src="/image/defaultUserIcon2.jpg" class="rounded-pill" width="40px" alt="chanadee"></a>
                                <%}%>
                                <a href="#" class="author-name text-bold fw-bold" style="cursor: default;"><%=data.userId.firstName%> <%=data.userId.lastName%></a>
                                <i class="fa-solid fa-circle fa-xs mt-1" style="color: #d4d6d9; font-size: 6px;"></i>
                                <span> <%=data.date%></span>
                            </div>
                            <a href="/blog?read=<%=data._id%>">
                            <h1 class="blog-title fs-5 mt-1"><%=data.title%></h1>
                            <p class="box-content"><%=data.content%></p>
                            </a>
                                <div class="blog-footer d-flex justify-content-between">
                                    <div>
                                    </div>
                                    <%if(locals.dataUser.email == data.userId.username){%>
                                    <i class="fa-regular fa-bookmark" hidden></i>
                                    <%}else{%>
                                        <!-- <a id="add-library" style="border: none; background-color: transparent; cursor: pointer;"><i class="fa-regular fa-bookmark"></i></a> -->
                                        
                                    <%}%>
                                </div>
                        </div>
                        <div>
                            <!-- <img src="/uploads/<%=data.image%>" class="img-content" alt="json"/> -->
                        </div>
                    </div>
                <%})%>
                <%}else{%>
                <%}%>
        </div>
        
        
    </div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/library.js"></script>
<script src="https://kit.fontawesome.com/4b826e6716.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>